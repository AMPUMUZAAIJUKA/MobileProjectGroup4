<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:background="@color/white"
        android:inputType="text"
        android:textSize="40pt"
        android:gravity="right|center"
        android:layout_marginBottom="1pt"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--        android:layout_weight="1">-->

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/acButton"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="C"
                android:textSize="11pt"
                android:textColor="@color/red"
                android:layout_marginRight="2pt"
                android:layout_marginLeft="2pt"
                android:onClick="clearEvent"
                ></Button>
            <Button
                android:id="@+id/buBracketsOpen"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="("
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:onClick="operatorEvent"
                ></Button>
            <Button
                android:id="@+id/buBracketsClose"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text=")"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:onClick="operatorEvent"
                ></Button>
            <Button
                android:id="@+id/divButton"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="/"
                android:textSize="10pt"
                android:onClick="operatorEvent"
                android:layout_marginRight="2pt"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/seven"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="7"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:layout_marginLeft="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/eight"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="8"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/nine"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="9"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/multiButton"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="*"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:onClick="operatorEvent"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/four"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="4"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:layout_marginLeft="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/five"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="5"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/six"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="6"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/minusButton"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="-"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:onClick="operatorEvent"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/one"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="1"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:layout_marginLeft="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/two"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="2"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/three"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="3"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/plusButton"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="+"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:onClick="operatorEvent"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/minusPlusButton"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="+/-"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:layout_marginLeft="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/zero"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="0"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
               ></Button>
            <Button
                android:id="@+id/point"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="."
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/equalsButton"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:text="="
                android:textSize="10pt"
                android:onClick="equalEvent"
                ></Button>
        </TableRow>
    </TableLayout>
</LinearLayout>